{
  "name": "recall-player",
  "version": "1.4.2",
  "description": "Replay AI coding sessions like a video player - supports Claude Code, Codex CLI, and Gemini CLI",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "bin": {
    "recall": "./bin/recall.js"
  },
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend && npm run copy:frontend",
    "build:backend": "npm run build -w backend",
    "build:frontend": "npm run build -w frontend",
    "copy:frontend": "mkdir -p backend/public && cp -r frontend/dist/* backend/public/",
    "dev": "npm run dev -w backend & npm run dev -w frontend",
    "dev:backend": "npm run dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "npm test -w backend -- --run",
    "test:frontend": "npm test -w frontend -- --run",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "npm run lint -w backend",
    "lint:frontend": "npm run lint -w frontend",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "start": "node bin/recall.js"
  },
  "files": [
    "bin/",
    "backend/dist/",
    "backend/public/",
    "backend/package.json"
  ],
  "keywords": [
    "claude",
    "codex",
    "gemini",
    "ai",
    "coding",
    "replay",
    "session",
    "video-player"
  ],
  "author": "Farman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/farmanp/recall.git"
  },
  "homepage": "https://github.com/farmanp/recall#readme",
  "bugs": {
    "url": "https://github.com/farmanp/recall/issues"
  },
  "type": "commonjs",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "chokidar": "^4.0.3",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "lru-cache": "^11.2.5",
    "open": "^10.0.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.5.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md,yml,yaml}": "npx prettier --write",
    "backend/**/*.{ts,tsx}": "bash -lc \"cd backend && npx eslint -c eslint.config.cjs\"",
    "frontend/**/*.{ts,tsx}": "bash -lc \"cd frontend && npx eslint -c eslint.config.js\""
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
